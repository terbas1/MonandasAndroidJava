<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".InfoVentaActivity"
    android:background="@color/pantallaCarga">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            >
            <LinearLayout
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#FFD4C7"
                android:gravity="center">
                <TextView
                    android:id="@+id/nombre_producto"
                    android:textSize="25dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="NOMBRE DEL PRODUCTO"
                    android:layout_margin="10dp"/>
                <TextView
                    android:textSize="20dp"
                    android:layout_gravity="start"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Correo del Cliente:"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:id="@+id/cliente_correo"
                    android:textSize="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="start"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Marco antonio_@Hotmail.com"/>
                <TextView
                    android:textSize="20dp"
                    android:layout_gravity="start"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Cantidad:"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:id="@+id/cantidad_producto"
                    android:textSize="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="start"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="  2"/>
                <TextView
                    android:textSize="20dp"
                    android:layout_gravity="start"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="DirecciÃ³n:"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:id="@+id/cliente_direccion"
                    android:textSize="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="start"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Jr los Flamencos #663"/>
                <TextView
                    android:textSize="20dp"
                    android:layout_gravity="start"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Total:"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:id="@+id/total"
                    android:textSize="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="start"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="S/ ."/>
                <TextView
                    android:textSize="20dp"
                    android:layout_gravity="start"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Fecha de Compra:"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:id="@+id/compra_fecha"
                    android:textSize="15dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="start"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="10/02/2020"/>
                <Button
                    android:id="@+id/button_actualizar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Enviando Producto"
                    android:background="@drawable/button_info2"
                    android:layout_margin="20dp"
                    android:textStyle="bold"

                    />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>